<section class="{{ content.field_padding }} {{ content.field_background_color }} {{ content.field_borders }} {{ content.field_margins }}">
  <div class="{{ content.field_container_width }}">
    {% if content.field_title_has_value or content.field_description_formatted_has_value or content.field_description_has_value %}
    {# section_header_class: see penn_entity_preprocess_entity #}
      <header class="section-header section-header--centered {{ content.section_header_class }}">
        {{ content.field_title }} 
        <div class="wysiwyg">
          {{ content.field_description_formatted }} 
        </div>
        {{ content.field_description }} {#  deprecated; replaced by formatted description #}
      </header>
    {% endif %}
    <div class="card-listing card-listing--{{ content.field_listing_layout }}">
      <div class="contain">
        {{ content.field_penn_entity_reference }}
      </div>
    </div>
  </div>
</section>